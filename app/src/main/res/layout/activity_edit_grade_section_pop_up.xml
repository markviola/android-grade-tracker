<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.popups.EditGradeSectionPopUpActivity"
    android:background="@drawable/list_border">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/edit_grade_section_pop_up_title"
        android:textSize="27dp"
        android:id="@+id/editSectionTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/list_border_orange"
        android:gravity="center"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/edit_grade_section_pop_up_name"
        android:textSize="16dp"
        android:id="@+id/sectionNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editSectionTitle"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/sectionNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editSectionTitle"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="130dp"
        android:inputType="textCapSentences"
        android:gravity="center"/>

    <TextView
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:text="@string/edit_grade_section_pop_up_weight"
        android:textSize="16dp"
        android:id="@+id/sectionWeightText"
        android:layout_below="@+id/sectionNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/sectionWeightEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sectionNameText"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="130dp"
        android:inputType="numberDecimal"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_grade_section_pop_up_confirmation_button"
        android:id="@+id/editSectionButton"
        android:onClick="editSectionButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>
