<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mark.gradetracker.popups.CustomAlertPopUp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="CAUTION"
        android:id="@+id/cautionTitleText"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.75"
        android:background="@drawable/list_border_orange"
        android:gravity="center"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text=""
        android:id="@+id/cautionContentText"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:padding="10dp"
        android:background="@drawable/list_border"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Continue Text"
        android:id="@+id/continueButton"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="continueButtonClicked"
        android:background="@drawable/list_border"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/list_border_red"
        android:onClick="cancelButtonClicked"/>

</LinearLayout>
