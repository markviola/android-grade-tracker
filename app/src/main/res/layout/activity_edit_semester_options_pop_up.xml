<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.popups.EditSemesterOptionsPopUpActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text=""
        android:id="@+id/semesterTitleText"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.75"
        android:background="@drawable/list_border_orange"
        android:gravity="center"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Edit Semester"
        android:id="@+id/editSemesterButton"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="editSemesterButtonClicked"
        android:background="@drawable/list_border"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Delete Semester"
        android:id="@+id/deleteSemesterButton"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="deleteSemesterButtonClicked"
        android:background="@drawable/list_border"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/list_border_red"
        android:onClick="cancelButtonClicked"/>

</LinearLayout>
